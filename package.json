{
  "name": "root",
  "private": true,
  "scripts": {
	"prepare": "husky install",
	"test": "lerna run test",
	"lint": "lerna run lint",
	"sync_dependencies_versions": "npx syncpack fix-mismatches -p -d -P"
  },
  "workspaces": [
	"packages/*"
  ],
  "devDependencies": {
	"@commitlint/cli": "^13.2.1",
	"@commitlint/config-conventional": "^13.2.0",
	"cz-conventional-changelog": "^3.3.0",
	"husky": "^7.0.4",
	"lerna": "^4.0.0",
	"lint-staged": "^11.2.5",
	"prettier": "^2.4.1",
	"tsdx": "^0.14.1",
	"tslib": "^2.3.1",
	"typescript": "^4.4.4",
	"@size-limit/preset-small-lib": "^6.0.3",
	"size-limit": "^6.0.3"
  },
  "lint-staged": {
	"*.{tsx,ts,js,css,md}": [
	  "prettier --write"
	]
  },
  "config": {
	"commitizen": {
	  "path": "./node_modules/cz-conventional-changelog"
	}
  },
  "engines": {
	"node": ">=10"
  }
}
